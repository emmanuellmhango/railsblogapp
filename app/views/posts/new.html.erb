<%= form_with(model: [current_user, @post], local: true) do |f| %>
  <div class="field">
    <%= f.label :title %> <br />
    <%= f.text_field :title, class: 'form-group' %>
  </div>
  <div class="field">
    <%= f.label :text %> <br />
    <%= f.text_area :text, class: 'form-group'  %>
  </div>
  <div class="field">
    <%= f.submit 'Submit', class: 'form-group-btn'  %>
  </div>
<% end %>
