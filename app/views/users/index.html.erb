<h1>Here is a list of all user</h1>
<div class='container'>
  <% @users.each do |user| %>
    <% link = "users/#{user.id}" %>
    <a href=<%= link %>>
      <div class='prof-pic'>
        <%= image_tag user.try(:photo) || 'https://static.freeimages.com/images/home/filetypes/photo.png', class: 'prof-pic' %>
      </div>
      <div class="user-class">
        <span class='title'> <%= user.name %></span>  
        <span class='number-of-posts'>Number of posts: <%= user.posts_counter %></span>
      </div>
    </a>
  <% end %>
  <div>
</div>
