<h1>Specific user</h1>
<div class='user-class'>
  <span class='title'> <%= @user.name %> </span> <span class='posts_counter'>Number of posts: <%= @user.post_counter %></span>
</div>
<div class='bio-class'>
  <%= @user.bio %>
</div>
<div class='posts-container'>
  <% @user.recent_posts.each_with_index do |post, index| %>
    <div class='user-class'>
      <h2>Post #<%= index+1 %>
      <p class='post'> <%= post.text %></p>
      <div class='stats'>
        <span>Comments: <%= post.comments_counter %> </span> <span>Likes: <%= post.likes_counter %> </span>
      </div>
    </div>
  <% end %>
  <% link = "#{@user.id}/posts" %>
    <a href=<%= link %> >
      <button>Show All Posts</button>
    </a>
  <div>
</div>
